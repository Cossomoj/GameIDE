{
  "name": "GameIDE - AI Game Generator",
  "short_name": "GameIDE",
  "description": "AI-powered game development platform for Yandex Games",
  "start_url": "/",
  "display": "standalone",
  "orientation": "any",
  "theme_color": "#2563eb",
  "background_color": "#1e40af",
  "lang": "ru",
  "scope": "/",
  "icons": [
    {
      "src": "/icons/icon-144x144.svg",
      "sizes": "144x144",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "GameIDE Desktop Interface"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "GameIDE Mobile Interface"
    }
  ],
  "categories": ["games", "entertainment", "developer"],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Create Game",
      "short_name": "Create",
      "description": "Create a new game",
      "url": "/create",
      "icons": [
        {
          "src": "/icons/shortcut-create.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "My Games",
      "short_name": "Games",
      "description": "View my games",
      "url": "/games",
      "icons": [
        {
          "src": "/icons/shortcut-games.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Interactive Mode",
      "short_name": "Interactive",
      "description": "Interactive game generation",
      "url": "/interactive",
      "icons": [
        {
          "src": "/icons/shortcut-interactive.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".zip", ".json"]
        }
      ]
    }
  },
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://gameide.yandex.games"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  }
} 